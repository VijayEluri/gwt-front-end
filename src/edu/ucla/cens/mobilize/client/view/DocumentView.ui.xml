<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:w="urn:import:edu.ucla.cens.mobilize.client.ui">
  <ui:style>
    .topNav {
      background-color: #DDD;
      border-bottom: solid thin #AAA;
      font-size: 0.9em;
      margin: 0px;
      padding: 3px 5px 10px 15px;
    }
    .leftSideBarMenu {
      font-size: 0.9em;
      padding-left: 5px;
    }
    .leftSideBarMenu td {
      border-bottom: solid thin #DDD;
      cursor: pointer;
      padding: 0px 0px 2px 7px;
    }
    .leftSideBarMenu td:hover {
      background-color: #E0E5FF;
    }
    .leftSideBar {
      background-color: #EEE;
      border-right: solid thin #CCC;
      padding: 10px;
    }
    .menuTitle {
      font-weight: bold;
      padding: 10px;
    }
    .msg {
      background-color: #FFF7D7;
      border: solid thin #DDD6A4;
      font-size: 0.9em;
      margin: 10px auto;
      padding: 5px;
      text-align: center;
      width: 80%;
    }
    .msgHide {
      color: purple;
      cursor: pointer;
      float: right;
      font-size: 0.9em;
      padding-right: 5px;
      text-decoration: underline;
    }
    .plotBox {
     width: 150px;
    }
    .plotDiv {
      border-left: solid 1px #BBB;
      padding: 5px;
      text-align: center;
    }
    .plotSideBarTitle {
    }
    .scrollable {
      overflow-x: hidden;
      overflow-y: auto;
    }
    .separator {
      padding-right: 2px;
    }

  </ui:style>
  <g:DockLayoutPanel unit="PX" ui:field="mainLayout">
    
    <!-- Top menu bar. Items change depending on role. (e.g., Author Center)-->
    <g:north size='25'>
      <g:HTMLPanel>
	      <g:MenuBar ui:field='topMenuBar' addStyleNames='{style.topNav}'>
	        <g:MenuItem ui:field='myDocumentsMenuItem'>
	          <a href='#'>My Documents</a>
	        </g:MenuItem>
	        <g:MenuItem ui:field='browseMenuItem'>
	          <span class='{style.separator}'>|</span>
	          <a href='#'>Browse Documents</a>
	        </g:MenuItem>
	        <g:MenuItem ui:field='uploadMenuItem'>
	          <span class='{style.separator}'>|</span>
	          <a href='#'>Upload</a>
	        </g:MenuItem>
	      </g:MenuBar>
	      <w:MessageWidget ui:field='msgWidget' />
      </g:HTMLPanel>
    </g:north>
    
    <g:west size='170'>
      <g:HTMLPanel addStyleNames='{style.leftSideBar}'>
        <g:Button ui:field='documentUploadButton'>
          Upload Documents
        </g:Button>
        <!-- choose to view by campaign, by class, by owner, etc -->
      </g:HTMLPanel>
    </g:west>
    
    <g:center>
      <g:HTMLPanel addStyleNames='{style.scrollable}'>
        <!-- msg box is visible only when there is a message to display -->
        <w:MessageWidget ui:field='msg' />
        <!-- only one of these will be visible at a time depending on selected subview -->
        <w:DocumentList ui:field="documentList"></w:DocumentList>
        <w:DocumentDetail ui:field="documentDetail"></w:DocumentDetail>
        <w:DocumentEdit ui:field="documentEdit"></w:DocumentEdit>
      </g:HTMLPanel>
    </g:center>
  
  </g:DockLayoutPanel>
</ui:UiBinder> 