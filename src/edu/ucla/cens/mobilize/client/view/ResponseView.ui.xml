<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .buttonPanel {
    	padding: 4px 12px;
    }
    .container {
    	padding: 10px 15px; 
    	padding: 0px;
    }
    .leftSideBar {
    	background-color: #EEE;
    	border-right: solid 1px #CCC;
    }
    .leftSideBarMenu {
    	width: 100%;
    }
    .leftSideBarMenu table {
    	border:none;
    	border-collapse: collapse;
    	margin-top: 20px;
    }
    .leftSideBarMenu td {
      border-bottom: solid thin #DDD;
      cursor: pointer;
      padding: 4px 0px 4px 20px;
      width: 200px; /* same as west panel */
    }
    .leftSideBarMenu td:hover {
    	background-color: #FFF;
    }
    .filterContainer {
    	background-color: #DDD;
    	border-bottom: solid 1px #BBB;
      padding: 2px 2px 2px 20px;
      text-align: right;
      width: 100%;
    }
    .filterContainer .label {
    	font-weight: bold;
    	padding: 0px 5px 0px 10px;
    }
    .filterContainer select {
    }
    .filterContainer td {
    	vertical-align: middle;
    }
    .header td {
    	background-color: #EEE;
      padding: 5px 0px 0px 5px;
      vertical-align: middle;
    }
    .responseList .header td {
    	font-weight: bold;
    }
    .responseContainer {
    	overflow: auto;
    	padding: 5px 10px;
    	width: 100%;
    }
    .scrollable {
      overflow: auto;
    }
    .sectionHeader {
      background-color: #FFFFE0;
      border-bottom: solid 1px #CCC;
      color: #333;
      font-weight: bold;
      padding: 15px;
      margin: 0px;
    }
    .sectionHeaderTitle {
    	font-size: 1.1em;
    	font-weight: bold;
    }
    .sectionHeaderDetail {
    	font-weight: normal;
    	font-size: 0.8em;
    	padding-top: 2px;
    }
    .selectAllNoneLinks {
    	padding: 5px 10px;
    }
    .shareButton{
      background: #EEEEEE url('images/accept.png') no-repeat;
    }
    .deleteButton {
      background: #EEEEEE url('images/delete.png') no-repeat;
    }
    .unshareButton {
      background: #EEEEEE url('images/unshare.png') no-repeat;
    }
    .shareButton, .deleteButton, .unshareButton {
      background-position: 2px 50%;
      padding: 2px 2px 2px 18px;
    }
    .smallActionLink, .smallActionLink:hover {
    	color: #551A8B;
      cursor: pointer;
      font-size: 0.9em;
      margin-top: -10px;
      padding: 0px 2px 5px 2px;
      text-decoration: underline;
    }
  </ui:style>
  
  <g:DockLayoutPanel unit='PX' ui:field='mainLayout'>
  
    <!-- top filter bar -->
    <g:north size='27'>
      <g:HTMLPanel addStyleNames='{style.filterContainer}'>      
		    <g:HorizontalPanel verticalAlignment='middle'>
		      <g:InlineLabel addStyleNames='{style.label}'>Participant Name:</g:InlineLabel>
		      <g:InlineLabel ui:field='singleParticipantLabel' />
		      <g:ListBox ui:field='participantFilter' visibleItemCount='1' />
		      <g:InlineLabel addStyleNames='{style.label}'>Campaign:</g:InlineLabel>
		      <g:ListBox ui:field='campaignFilter' visibleItemCount='1' />
		      <g:InlineLabel addStyleNames='{style.label}'>Survey:</g:InlineLabel>
		      <g:ListBox ui:field='surveyFilter' visibleItemCount='1' />
		    </g:HorizontalPanel>
	    </g:HTMLPanel>
    </g:north>
    
    <!-- left sidebar lets you pick private/public/invisible -->
    <g:west size='170'>
      <g:HTMLPanel addStyleNames='{style.leftSideBar}'>
        <g:MenuBar ui:field='leftSideBarMenu'
                   vertical='true'
                   addStyleNames='{style.leftSideBarMenu}'>
          <g:MenuItem ui:field='privateMenuItem'>Private Responses</g:MenuItem>
          <g:MenuItem ui:field='publicMenuItem'>Public Responses</g:MenuItem>
          <g:MenuItem ui:field='allMenuItem'>All Responses</g:MenuItem>
        </g:MenuBar>
      </g:HTMLPanel>
    </g:west>
    
    <g:center>
      <g:HTMLPanel addStyleNames='{style.scrollable}'>
        <g:HTMLPanel addStyleNames='{style.sectionHeader}'>
            <!-- description changes depending on left menubar selection -->
            <g:Label ui:field='sectionHeaderTitle' addStyleNames='{style.sectionHeaderTitle}'>
              Private responses
            </g:Label>
            <g:Label ui:field='sectionHeaderDetail' addStyleNames='{style.sectionHeaderDetail}'>
              Visible only to you.
            </g:Label> 
        </g:HTMLPanel>
        
        <!-- buttons that affect selected responses -->
	      <g:HorizontalPanel addStyleNames='{style.buttonPanel}' verticalAlignment='ALIGN_MIDDLE'>
	        <g:cell verticalAlignment='ALIGN_MIDDLE'>
		        <g:Anchor ui:field='selectAllLinkTop' addStyleNames='{style.smallActionLink}'>
	            select all
	          </g:Anchor>
          </g:cell>
          <g:cell verticalAlignment='ALIGN_MIDDLE'>
            <g:InlineHTML>
              |
            </g:InlineHTML>
          </g:cell>
          <g:cell verticalAlignment='ALIGN_MIDDLE'>
	          <g:Anchor ui:field='selectNoneLinkTop' addStyleNames='{style.smallActionLink}'>
	            none
	          </g:Anchor>
          </g:cell> 
	        <!-- fixme: disable until something is checked -->
	        <g:Button ui:field='shareButtonTop' addStyleNames='{style.shareButton}'>
	          Share
	        </g:Button> 
	        <g:Button ui:field='unshareButtonTop' addStyleNames='{style.unshareButton}'>
	          Unshare
	        </g:Button>
	        <!-- fixme: show confirm dialog for delete -->
	        <g:Button ui:field='deleteButtonTop' addStyleNames='{style.deleteButton}'>
	          Delete
	        </g:Button>
        </g:HorizontalPanel>
        
	      <g:VerticalPanel addStyleNames='{style.responseContainer}'>
	      
		      <!-- list of responses that match the selected filters  -->
		      <g:VerticalPanel ui:field="responseList" addStyleNames='{style.responseList}' />
		      
	      </g:VerticalPanel>
      </g:HTMLPanel>
    </g:center>
    
    <g:east size='200'><g:HTMLPanel /><!--placeholder--></g:east>
    
    <g:south size='40'>
      <g:HTMLPanel>
         
        <!-- buttons that affect the selected responses -->
	      <g:HorizontalPanel addStyleNames='{style.buttonPanel}'>
	        <g:cell verticalAlignment='ALIGN_MIDDLE'>
	        <!-- select all/none action links -->
		        <g:Anchor ui:field='selectAllLinkBottom' addStyleNames='{style.smallActionLink}'>
		          select all
		        </g:Anchor>
		      </g:cell>
		      <g:cell verticalAlignment='ALIGN_MIDDLE'>
		        <g:InlineHTML>
		        |
		        </g:InlineHTML>
		      </g:cell>
		      <g:cell verticalAlignment='ALIGN_MIDDLE'>
		        <g:Anchor ui:field='selectNoneLinkBottom' addStyleNames='{style.smallActionLink}'>
		          none
		        </g:Anchor>
	        </g:cell>
	        <!-- fixme: disable until something is checked -->
	        <g:Button ui:field='shareButtonBottom' addStyleNames='{style.shareButton}'>
	          Share
	        </g:Button> 
	        <g:Button ui:field='unshareButtonBottom' addStyleNames='{style.unshareButton}'>
	          Unshare
	        </g:Button>
	        <!-- fixme: show confirm dialog for delete -->
	        <g:Button ui:field='deleteButtonBottom' addStyleNames='{style.deleteButton}'>
	          Delete
	        </g:Button>
       </g:HorizontalPanel>
     </g:HTMLPanel>
    </g:south>
    
  </g:DockLayoutPanel>

</ui:UiBinder> 