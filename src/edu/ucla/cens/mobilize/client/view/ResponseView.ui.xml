<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:edu.ucla.cens.mobilize.client.ui"
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client">
  <ui:style type="edu.ucla.cens.mobilize.client.view.ResponseViewImpl.ResponseViewStyles"> 
    .buttonPanel {
    	padding: 4px 12px;
    }
    .container {
    	padding: 10px 15px; 
    	padding: 0px;
    }
    .dateBox {
    	width: 100px;
    }
    .leftSideBar {
    	background-color: #EEE;
    	border-right: solid 1px #CCC;
    	padding: 10px 10px 10px 15px;
    }
    .filter {
    	width: 142px;
    }
    .filterContainer .label {
    	font-weight: bold;
    	padding: 2px 0px 0px;
    }
    .header td {
    	background-color: #EEE;
      padding: 5px 0px 0px 5px;
      vertical-align: middle;
    }
    .photoCheckBox {
    	padding: 5px 0px;
    }
    .responseList {
    	width: 100%;
    }
    .responseList .header td {
    	font-weight: bold;
    }
    .responseContainer {
    	overflow: auto;
    	padding: 5px 0px;
    	width: 100%;
    }
    .scrollable {
      overflow: auto;
    }
    .sectionHeader {
      background-color: #FFFFE0;
      border-bottom: solid 1px #CCC;
      color: #333;
      font-weight: bold;
      padding: 10px 15px;
      margin: 0px;
    }
    .sectionHeaderTitle {
    	font-size: 1.1em;
    	font-weight: bold;
    }
    .sectionHeaderDetail {
    	font-weight: normal;
    	font-size: 0.8em;
    	padding-top: 2px;
    }
    .selectAllNoneLinks {
    	padding: 5px 10px;
    }
    .shareButton{
      background: #EEEEEE url('images/group_small.png') no-repeat;
    }
    .sideBarItemSelected {
    	background-color: #EEE;
    	font-weight: bold;
    }
    .deleteButton {
      background: #EEEEEE url('images/delete.png') no-repeat;
    }
    .makePrivateButton {
      background: #EEEEEE url('images/lock_small.png') no-repeat;
    }
    .shareButton, .deleteButton, .makePrivateButton {
      background-position: 2px 50%;
      padding: 2px 2px 2px 18px;
    }
    .smallActionLink, .smallActionLink:hover {
    	color: #551A8B;
      cursor: pointer;
      font-size: 0.9em;
      margin-top: -10px;
      padding: 0px 2px 5px 2px;
      text-decoration: underline;
    }
    .topBar {
    	background-color: #DDD;
    	border-bottom: solid 1px #CCC;
    }
  </ui:style>
  
  <g:DockLayoutPanel unit='PX' ui:field='mainLayout'>
  
    <g:north size='15'>
      <g:HTMLPanel addStyleNames='{style.topBar}'>      
	    </g:HTMLPanel>
    </g:north>
    
    <g:west size='170'>
      <g:HTMLPanel addStyleNames='{style.filterContainer} {style.leftSideBar}'>
        <g:Label addStyleNames='{style.label}'>Campaign:</g:Label>
        <g:ListBox ui:field='campaignFilter'
                   visibleItemCount='1'
                   addStyleNames='{style.filter}' />
        <g:Label addStyleNames='{style.label}'>Survey:</g:Label>
        <g:ListBox ui:field='surveyFilter'
                   visibleItemCount='1' 
                   addStyleNames='{style.filter}' />
        <g:Label addStyleNames='{style.label}'>Participant:</g:Label>
        <g:Label ui:field='singleParticipantLabel' />
        <g:ListBox ui:field='participantFilter' 
                   visibleItemCount='1'
                   addStyleNames='{style.filter}' />
        <g:Label addStyleNames='{style.label}'>Privacy:</g:Label>
        <g:ListBox ui:field='privacyFilter'
                   visibleItemCount='1' 
                   addStyleNames='{style.filter}' />
        <g:Label addStyleNames='{style.label}'>From date:</g:Label>
        <dp:DateBox ui:field='fromDateBox' addStyleNames='{style.dateBox}' />
        <g:Label addStyleNames='{style.label}'>To date:</g:Label>
        <dp:DateBox ui:field='toDateBox' addStyleNames='{style.dateBox}' />
        <g:HTMLPanel addStyleNames='{style.photoCheckBox}'>
          <g:CheckBox ui:field='hasPhotoCheckBox'>Only photo responses</g:CheckBox>
        </g:HTMLPanel>
        <g:Button ui:field='applyFiltersButton'>Apply Filters</g:Button>
      </g:HTMLPanel>
    </g:west>
    
    <g:center>
      <g:HTMLPanel addStyleNames='{style.scrollable}'>
        <w:MessageWidget ui:field='messageWidget' />
        <g:HTMLPanel addStyleNames='{style.sectionHeader}'>
            <!-- title changes depending on filter selections -->
            <g:Label ui:field='sectionHeaderTitle' addStyleNames='{style.sectionHeaderTitle}' />
            <g:Label addStyleNames='{style.sectionHeaderDetail}'>
              Shared responses can be exported and analyzed by other members of the campaign.
            </g:Label>
        </g:HTMLPanel>
        
        <!-- buttons that affect selected responses -->
	      <g:HorizontalPanel addStyleNames='{style.buttonPanel}' verticalAlignment='ALIGN_MIDDLE'>
          <g:cell verticalAlignment='ALIGN_MIDDLE'> 
		        <g:Anchor ui:field='selectAllLinkTop' addStyleNames='{style.smallActionLink}'>
	            select all
	          </g:Anchor>
          </g:cell>
          <g:cell verticalAlignment='ALIGN_MIDDLE'>
            <g:InlineHTML>
              |
            </g:InlineHTML>
          </g:cell>
          <g:cell verticalAlignment='ALIGN_MIDDLE'>
	          <g:Anchor ui:field='selectNoneLinkTop' addStyleNames='{style.smallActionLink}'>
	            none
	          </g:Anchor>
          </g:cell> 
	        <!-- fixme: disable until something is checked -->
	        <g:Button ui:field='shareButtonTop' addStyleNames='{style.shareButton}'>
	          Share
	        </g:Button> 
	        <g:Button ui:field='makePrivateButtonTop' addStyleNames='{style.makePrivateButton}'>
	          Make Private
	        </g:Button>
	        <g:Button ui:field='deleteButtonTop' addStyleNames='{style.deleteButton}'>
	          Delete
	        </g:Button>
	        <g:cell verticalAlignment='ALIGN_MIDDLE'>
            <g:Anchor ui:field='expandLinkTop' addStyleNames='{style.smallActionLink}'>
              expand
            </g:Anchor>
          </g:cell>
          <g:cell verticalAlignment='ALIGN_MIDDLE'>
            <g:InlineHTML>
              |
            </g:InlineHTML>
          </g:cell>
          <g:cell verticalAlignment='ALIGN_MIDDLE'>
            <g:Anchor ui:field='collapseLinkTop' addStyleNames='{style.smallActionLink}'>
              collapse
            </g:Anchor>
          </g:cell> 
        </g:HorizontalPanel>
        
	      <g:VerticalPanel addStyleNames='{style.responseContainer}'>
	      
		      <!-- list of responses that match the selected filters  -->
		      <g:VerticalPanel ui:field="responseList" addStyleNames='{style.responseList}' />
		      
	      </g:VerticalPanel>
      </g:HTMLPanel>
    </g:center>
    
    <g:south size='40'>
      <g:HTMLPanel>
         
        <!-- buttons that affect the selected responses -->
	      <g:HorizontalPanel addStyleNames='{style.buttonPanel}'>
	        <g:cell verticalAlignment='ALIGN_MIDDLE'>
	        <!-- select all/none action links -->
		        <g:Anchor ui:field='selectAllLinkBottom' addStyleNames='{style.smallActionLink}'>
		          select all
		        </g:Anchor>
		      </g:cell>
		      <g:cell verticalAlignment='ALIGN_MIDDLE'>
		        <g:InlineHTML>
		        |
		        </g:InlineHTML>
		      </g:cell>
		      <g:cell verticalAlignment='ALIGN_MIDDLE'>
		        <g:Anchor ui:field='selectNoneLinkBottom' addStyleNames='{style.smallActionLink}'>
		          none
		        </g:Anchor>
	        </g:cell>
	        <!-- fixme: disable until something is checked -->
	        <g:Button ui:field='shareButtonBottom' addStyleNames='{style.shareButton}'>
	          Share
	        </g:Button> 
	        <g:Button ui:field='makePrivateButtonBottom' addStyleNames='{style.makePrivateButton}'>
	          Make Private
	        </g:Button>
	        <g:Button ui:field='deleteButtonBottom' addStyleNames='{style.deleteButton}'>
	          Delete
	        </g:Button>
	        <g:cell verticalAlignment='ALIGN_MIDDLE'>
            <g:Anchor ui:field='expandLinkBottom' addStyleNames='{style.smallActionLink}'>
              expand
            </g:Anchor>
          </g:cell>
          <g:cell verticalAlignment='ALIGN_MIDDLE'>
            <g:InlineHTML>
              |
            </g:InlineHTML>
          </g:cell>
          <g:cell verticalAlignment='ALIGN_MIDDLE'>
            <g:Anchor ui:field='collapseLinkBottom' addStyleNames='{style.smallActionLink}'>
              collapse
            </g:Anchor>
          </g:cell>
       </g:HorizontalPanel>
     </g:HTMLPanel>
    </g:south>
    
  </g:DockLayoutPanel>

</ui:UiBinder> 