<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client">
	
  <ui:style type="edu.ucla.cens.mobilize.client.view.ExploreDataViewImpl.ExploreDataStyles">
    .layout {
      display: block;
    }
    .plotPanel {
    }
    .plotPanelInnerContainer {
    }
    .plotTypeTreePanel {
    	height: 200px;
    }
    .plotTypeRadioPanel {
    }
    .dataControls {
    	height: 150px;
    	padding: 5px 10px;
    	position: absolute;
    	bottom: 0px;
    }
    .dataControlRow {
    	padding-top: 3px;
    }
    .dataControlLabel {
    	font-weight: bold;
    }
    .dataControlListBox {
    	width: 150px;
    }
    .menuSeparator {
      padding-right: 2px;
    }
    .rightSideBar {
    	height: 100%;
    }
    .topNav {
      background-color: #DDD;
      border-bottom: solid thin #AAA;
      font-size: 0.9em;
      margin: 0px;
      padding: 5px 5px 10px 15px;
    }
    .treeItemCategory {
    }
    .treeItemPlotType {
    }
  </ui:style>
  
    <g:DockLayoutPanel addStyleNames='{style.layout}' unit='PX'>
     
     <!-- filters -->
     <g:north size='25'>
       <g:HTMLPanel addStyleNames='{style.topNav}'>
		     <g:InlineHyperlink>R-Web</g:InlineHyperlink>
		     <span class='{style.menuSeparator}'>|</span>
		     <g:InlineHyperlink ui:field='browseDocumentsLink'>Mobility</g:InlineHyperlink>
		     <span class='{style.menuSeparator}'>|</span>
		     <g:InlineHyperlink ui:field='uploadLink'>Charts</g:InlineHyperlink>
       </g:HTMLPanel>
     </g:north>
     
     
     <g:center addStyleNames='{style.plotPanel}'>
      <g:HTMLPanel ui:field='plotContainer' addStyleNames='{style.plotPanelInnerContainer}'>
        <div class='floatstop' />
      </g:HTMLPanel>
     </g:center>
     
     <g:south size='30'>
       <g:HorizontalPanel ui:field='plotTypePanel' 
                          addStyleNames='{style.plotTypeRadioPanel}'>
         <g:RadioButton ui:field='rWebRadio' 
                        ui:name='plotType' 
                        ui:text='By Time' />
         <g:RadioButton ui:field='mapRadio' 
                        ui:name='plotType' 
                        ui:text='By Location' /> 
         <g:RadioButton ui:field='rawDataRadio' 
                        ui:name='plotType' 
                        ui:text='Raw Data' />
       </g:HorizontalPanel>
     </g:south>
    
     <g:east size='200'>
       <g:VerticalPanel addStyleNames='{style.rightSideBar}'>
         <g:HTMLPanel addStyleNames='{style.plotTypeTreePanel}'>
           <g:Tree ui:field='plotTypeTree' />
         </g:HTMLPanel>
         <g:HTMLPanel addStyleNames='{style.dataControls}'>
           <g:HTMLPanel addStyleNames='{style.dataControlRow}'>
             <g:InlineLabel addStyleNames='{style.dataControlLabel}'>Campaign:</g:InlineLabel>
             <g:ListBox addStyleNames='{style.dataControlListBox}'></g:ListBox>
           </g:HTMLPanel>
           <g:HTMLPanel addStyleNames='{style.dataControlRow}'>
             <g:InlineLabel addStyleNames='{style.dataControlLabel}'>Participant:</g:InlineLabel>
             <g:ListBox addStyleNames='{style.dataControlListBox}'></g:ListBox>
           </g:HTMLPanel>
           <g:HTMLPanel addStyleNames='{style.dataControlRow}'>
             <g:InlineLabel addStyleNames='{style.dataControlLabel}'>PromptX:</g:InlineLabel>
             <g:ListBox addStyleNames='{style.dataControlListBox}'></g:ListBox>
           </g:HTMLPanel>
           <g:HTMLPanel addStyleNames='{style.dataControlRow}'>
             <g:InlineLabel addStyleNames='{style.dataControlLabel}'>PromptY:</g:InlineLabel>
             <g:ListBox addStyleNames='{style.dataControlListBox}'></g:ListBox>
           </g:HTMLPanel>
         </g:HTMLPanel>
       </g:VerticalPanel>
     </g:east>
    
    </g:DockLayoutPanel>
  
</ui:UiBinder> 