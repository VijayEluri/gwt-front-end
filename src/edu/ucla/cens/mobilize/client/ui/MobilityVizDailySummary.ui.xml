	<g:HTMLPanel ui:field='wrapper'>
		<g:HTMLPanel addStyleNames='{style.header}'>
			<g:InlineLabel addStyleNames='{style.header-text}'>Daily Summary</g:InlineLabel>
		</g:HTMLPanel>
		
		<g:HTMLPanel addStyleNames='{style.date-selector}'>
