			<g:HTMLPanel addStyleNames='{style.top-box}'>
				<g:VerticalPanel ui:field="mobilityStats"></g:VerticalPanel>
			</g:HTMLPanel>
			
			<g:HTMLPanel addStyleNames='{style.top-box}'>
				<g:FlowPanel ui:field="temporalPlot"></g:FlowPanel>
			</g:HTMLPanel>
			
			<g:HTMLPanel addStyleNames='{style.right-box}'>
				<g:FlowPanel ui:field="durationPlot"></g:FlowPanel>
				<g:VerticalPanel ui:field="durationInfo"></g:VerticalPanel>
			</g:HTMLPanel>
			
			<g:HTMLPanel addStyleNames='{style.left-box}'>
				<g:FlowPanel ui:field="distancePlot"></g:FlowPanel>
				<g:VerticalPanel ui:field="distanceInfo"></g:VerticalPanel>
			</g:HTMLPanel>
			
			<g:HTMLPanel addStyleNames='{style.left-box}'>
			</g:HTMLPanel>
