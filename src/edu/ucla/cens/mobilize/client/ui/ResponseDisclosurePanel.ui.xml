<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="edu.ucla.cens.mobilize.client.ui.ResponseDisclosurePanel.ResponseDisclosurePanelStyle">
	/* header row is always visible, shows summary info */
	.checkbox {
		padding: 3px 0px 8px 2px;
	}
	.date {
		padding-right: 5px;
	}
	.header td {
		color: #222445;
		height: 26px;
		padding: 2px 5px 0px;
	}
	.header img {
		border: none;
	}
	/* action image buttons appear when hovering over header or 
	   when disclosure panel is open*/
	.shareButton {
		background: #EEEEEE url('images/accept.png') no-repeat;
	}
	.unshareButton {
		background: #EEEEEE url('images/unshare.png') no-repeat;
	}
	.deleteButton {
		background: #EEEEEE url('images/delete.png') no-repeat;
	}
	.shareButton, .unshareButton, .deleteButton {
		height: 20px;
		width: 20px;
	}
	.toolbarCtr {
     height: 25px;
     width: 100px;
  }
	.toolbar > img {
		border: solid thin white;
	}
	.toolbar > img:hover {
		background: #EEE;
		border: solid thin #CCC;
	}
	/* prompt responses are visible when disclosure panel is open */
	.promptResponseCtr {
		padding-bottom: 10px;
  }
	.promptResponse {
		padding-bottom: 2px;
  }
	.promptText {
	  color: #333;
	  font-weight: bold;
	  padding: 2px 15px;
  }
  /* todo: different styles for different prompt types */
  .promptValue {
  	color: #666;
    padding: 2px 25px;
  }
	</ui:style>
 <g:HorizontalPanel>
   <g:CheckBox ui:field='checkbox' addStyleNames='{style.checkbox}' />
	 <g:DisclosurePanel ui:field='disclosurePanel'>
	   <g:customHeader>
	     <g:HorizontalPanel addStyleNames='{style.header} header'>
	         <g:Label ui:field='campaignName'>campaign name</g:Label>
		       <g:Label ui:field='surveyName'>survey name</g:Label>
		       <g:Label ui:field='responseDateLabel' addStyleNames='{style.date}'>response date</g:Label>
		       <g:cell addStyleNames='{style.toolbarCtr}'>
			       <g:HTML ui:field='toolbar' addStyleNames='hidden {style.toolbar}'>
			       <!--
			         <g:Button ui:field='shareButton' addStyleNames='{style.shareButton}' />
			         <g:Button ui:field='deleteButton' addStyleNames='{style.deleteButton}' />
			         -->
			         <img src='images/accept.png' />
			         <img src='images/delete.png' />
			       </g:HTML>
		       </g:cell>
	     </g:HorizontalPanel>
	   </g:customHeader>
	   <g:HTML ui:field='details' addStyleNames='{style.promptResponseCtr}'>
	     <b>response</b> display template goes here
	   </g:HTML>
	 </g:DisclosurePanel>
   </g:HorizontalPanel>
</ui:UiBinder> 