<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field="res" type="edu.ucla.cens.mobilize.client.resources.FrontendResources" />
	
	<ui:style type='edu.ucla.cens.mobilize.client.ui.AdminMenu.AdminMenuStyles'>
		.container {
			background-color: #EEE;
      border-right: solid 1px #CCC;
      height: 100%;
      padding: 5px;
		}
		@eval COG_OFFSET SpriteHelper.cog()+"px";
		.menuItemAdminHome {
			background-position: 0px COG_OFFSET;
		}
		@eval TABLE_OFFSET SpriteHelper.table()+"px";
		.menuItemAuditLog {
			background-position: 0px TABLE_OFFSET;
		}
		@eval ADD_BLUE_OFFSET SpriteHelper.add_blue()+"px";
		.menuItemCreateCampaign {
      background-position: 0px ADD_BLUE_OFFSET;
    }
    @eval ADD_GREEN_OFFSET SpriteHelper.add_green()+"px";
		.menuItemCreateClass {
			background-position: 0px ADD_GREEN_OFFSET;
		}
		@eval ADD_ORANGE_OFFSET SpriteHelper.add_orange()+"px";
    .menuItemCreateUser {
      background-position: 0px ADD_ORANGE_OFFSET;
    }
    @eval PHONE_OFFSET SpriteHelper.phone()+"px";
	  .menuItemManageCampaigns {
	  	background-position: 0px PHONE_OFFSET;
	  }
	  @eval GROUP_OFFSET SpriteHelper.group()+"px";
	  .menuItemManageClasses {
      background-position: 0px GROUP_OFFSET;
    }
    @eval USER_RED_OFFSET SpriteHelper.user_red()+"px";
    .menuItemManageUsers {
      background-position: 0px USER_RED_OFFSET;
    }
	  .menuItemContainer {
	  	background-image: url('images/bg_white_transparent_50.png');
      background-position: top;
      background-repeat: repeat-x;
	  	height: 15px;
	  	margin: 2px 0px;
	  	padding: 5px;
	  }
	  .menuItemContainer a {
	  	display: inline-block;
	  	height: 16px;
	  	padding: 1px 0px 0px 20px;
	  	text-decoration: none;
	  	width: 100%; /* make the whole item clickable */
	  }
	  .menuItemContainerSelected {
	  	background-color: #CCC;
	  	border: 1px solid #DDD;
	  	border-bottom: 1px solid #CCC;
	  	font-weight: bold;
	  	width: 130px; /* 2px wider than unselected items */
	  }
	</ui:style>
  <g:HTMLPanel addStyleNames='{style.container}'>
      <g:HTMLPanel ui:field='adminHomeContainer' addStyleNames='{style.menuItemContainer}'>
        <g:Hyperlink ui:field='adminHomeHyperlink' addStyleNames='{res.sprite.med} {style.menuItemAdminHome}'>
            Admin Home
        </g:Hyperlink>
      </g:HTMLPanel>
      <g:HTMLPanel ui:field='auditLogContainer' addStyleNames='{style.menuItemContainer}'>
        <g:Hyperlink ui:field='auditLogHyperlink' addStyleNames='{res.sprite.med} {style.menuItemAuditLog}'>
            Audit Log
        </g:Hyperlink>
      </g:HTMLPanel>
      <g:HTMLPanel ui:field='manageUsersContainer' addStyleNames='{style.menuItemContainer}'>
        <g:Hyperlink ui:field='manageUsersHyperlink' addStyleNames='{res.sprite.med} {style.menuItemManageUsers}'>
          Manage Users
        </g:Hyperlink>
      </g:HTMLPanel>
      <g:HTMLPanel ui:field='createUserContainer' addStyleNames='{style.menuItemContainer}'>
	      <g:Hyperlink ui:field='createUserHyperlink' addStyleNames='{res.sprite.med} {style.menuItemCreateUser}'>
		      Create User
	      </g:Hyperlink>
      </g:HTMLPanel>
      <g:HTMLPanel ui:field='manageClassesContainer' addStyleNames='{style.menuItemContainer}'>
        <g:Hyperlink ui:field='manageClassesHyperlink' addStyleNames='{res.sprite.med} {style.menuItemManageClasses}'>
          Manage Classes
        </g:Hyperlink>
      </g:HTMLPanel>
      <g:HTMLPanel ui:field='createClassContainer' addStyleNames='{style.menuItemContainer}'>
        <g:Hyperlink ui:field='createClassHyperlink' addStyleNames='{res.sprite.med} {style.menuItemCreateClass}'>
          Create Class
        </g:Hyperlink>
      </g:HTMLPanel>
      <g:HTMLPanel ui:field='manageCampaignsContainer' addStyleNames='{style.menuItemContainer}'>
        <g:Hyperlink ui:field='manageCampaignsHyperlink' addStyleNames='{res.sprite.med} {style.menuItemManageCampaigns}'>
          Manage Campaigns
        </g:Hyperlink>
      </g:HTMLPanel>
      <g:HTMLPanel ui:field='createCampaignContainer' addStyleNames='{style.menuItemContainer}'>
        <g:Hyperlink ui:field='createCampaignHyperlink' addStyleNames='{res.sprite.med} {style.menuItemCreateCampaign}'>
          Create Campaign
        </g:Hyperlink>
      </g:HTMLPanel>
  </g:HTMLPanel>
</ui:UiBinder> 