<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
	/*** style reset ***/
	html, body, div, h1, h2, h3, h4, h5, h6, p, img, dl, dt, dd, ol, ul, li, table, tr, td, form, object, embed, article, aside, canvas, command, details, fieldset, figcaption, figure, footer, group, header, hgroup, legend, mark, menu, meter, nav, output, progress, section, summary, time, audio, video {
		margin: 0;
		padding: 0;
		border: 0;
	}
	
	.wrapper {
		font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
		font-size: 10pt;
		color: #333;
		line-height: 1;
		
		position: absolute;
		height: 100%;
		min-width: 100%;
		min-height: 100%;
		
		overflow: auto;
	}
	.wrapper ol, ul {
		list-style: none;
		line-height: 17px;
		margin: 0 0 1em;
	}
	.wrapper li {
		margin: 0 0 .5em;
	}
	.wrapper div {
		/* display: block; */
	}
	.wrapper a {
		color: #307fbc;
		text-decoration: none;
	}
	.wrapper a:hover {
		color: #f1831e;
		text-decoration: none;
	}
	.wrapper p, h1, h2 {
		padding: 0 0 15px 0;
	}
	.wrapper h1 {
		font-size: 18pt;
		font-weight: normal;
		text-shadow: 0px -1px 1px #FFF;
	}
	.wrapper h2 {
		font-size: 10pt;
		font-weight: bold;
		text-shadow: 0px -1px 1px #FFF;
	}
	
	/*** top panel ***/
	.ohmage-header-bar {
		background-image: url('images/theme-ohmage/login-header-bg.png');
		background-repeat: repeat-x;
		height: 117px;
		/* TODO: shadow; fix background, fix bottom border shadow */
		overflow: hidden;
	}
	.header-box {
		width: auto;
		max-width: 900px;
		min-width: 750px;
		margin: 0 auto;
		height: 105px;
		padding-top: 18px;
	}
	.logo {
		height: 79px;
	}
	
	/*** main container ***/
	.main {
		width: auto;
		max-width: 900px;
		min-width: 750px;
		margin: 0 auto;
		padding-top: 15px;
	}
	.content {
		padding-left: 50px;
		padding-right: 50px;
	}
	.clearfix::after {
		visibility: hidden;
		display: block;
		font-size: 0;
		content: '.';
		clear: both;
		height: 0;
	}
	
	/*** message panel ***/
	.registration-panel {
		padding-bottom: 10px;
	}
	.registration-box {
		padding: 20px;
		background: #f4f9fd;
		border: 1px solid #d2eafd;
		-moz-border-radius: 2px;
		-webkit-border-radius: 2px;
		-khtml-border-radius: 2px;
		border-radius: 2px;
	}
	
	/*** right panel ***/
	.right-panel {
		width: 285px;
		float: right;
	}
	.signin-box {
		padding: 20px;
		background: #f4f9fd;
		border: 1px solid #d2eafd;
		-moz-border-radius: 2px;
		-webkit-border-radius: 2px;
		-khtml-border-radius: 2px;
		border-radius: 2px;
	}
	.signin-label {
		display: block;
		color: #999;
		margin-bottom: 5px;
	}
	.signin-textbox {
		display: block;
		padding: 5px;
		width: 95%;
		border: 1px solid #51aff9;
		margin-bottom: 10px;
	}
	.signin-button {
		background-image: url('images/theme-ohmage/login-button-bg.png');
		background-repeat: repeat-x;
		height: 28px;
		width: 50%;
		font-size: 100%;
		font-weight: bold;
		color: #FFF;
		text-shadow: 0px -1px 1px #666;
		text-align: center;
		margin-bottom: 10px;
	}
	
	/*** footer panel ***/
	.ohmage-footer-bar {	/* footer panel */
		padding-top: 10px;
		position: block;
		width: 100%;
		overflow: hidden;
	}
	.footer-box {
		padding-top: 10px;
		white-space: nowrap;
		border-top: 1px solid #AAA;
	}
	.footer-box ul {
		float: left;
		display: inline;
		color: #AAA;
	}
	.footer-box ul li {
		display: inline;
		padding-right: 0px;
	}
	
	/*** toolbox styles ***/
	.float-right {
		float: right;
		text-align: right;
	}
  </ui:style>

	<g:HTMLPanel addStyleNames='{style.wrapper}'>

		<!-- HEADER BAR -->
		<g:HTMLPanel addStyleNames='{style.ohmage-header-bar}'>
			<g:HTMLPanel addStyleNames='{style.header-box} {style.content} {style.clearfix}'>
				<g:Image addStyleNames='{style.logo}' url="images/theme-ohmage/login-logo.png" />
			</g:HTMLPanel>
		</g:HTMLPanel>

		<g:HTMLPanel addStyleNames='{style.main} {style.content} {style.clearfix}'>
			<!-- BACK TO LOGIN PAGE LINK -->
			<g:Hyperlink targetHistoryToken='login'>&#8592; Return to ohmage login</g:Hyperlink>
			
			<!-- REGISTRATION PANEL -->
			<g:HTMLPanel ui:field='registrationPanel' addStyleNames='{style.ohmage-footer-bar} {style.registration-panel}'>
				<!-- TITLE TEXT -->
				<g:Label>Create your ohmage account in seconds</g:Label>
				<g:Hyperlink targetHistoryToken='login'>Already have an account?</g:Hyperlink>
				
				<!-- REGISTRATION FORM -->
				<g:HTMLPanel addStyleNames='{style.registration-box}'>
					<g:Label ui:field='errorText'></g:Label>
					<g:Label>Username:</g:Label>
					<g:TextBox ui:field='username' />
					<g:Label>Password:</g:Label>
					<g:PasswordTextBox ui:field='password' />
					<g:Label>Confirm:</g:Label>
					<g:PasswordTextBox ui:field='passwordConfirm' />
					<g:Label>Email Address:</g:Label>
					<g:TextBox ui:field='email' />
					<g:Label>Are you human?</g:Label>
					<g:HTMLPanel ui:field='recaptchaContainer'></g:HTMLPanel>
					<g:Label>Terms of Service</g:Label>
					<g:TextArea ui:field='tos'>Loading terms of service...</g:TextArea>
					<g:CheckBox ui:field='agree'>I agree to the terms of service</g:CheckBox>
					<g:Button ui:field='submit'>Register</g:Button>
				</g:HTMLPanel>
			</g:HTMLPanel>
			
			<!-- SUBMISSION PANEL -->
			<g:HTMLPanel ui:field='submissionPanel' addStyleNames='{style.ohmage-footer-bar} {style.registration-panel}'>
				<!-- TITLE TEXT -->
				<g:Label>Just one more step...</g:Label>
				
				<!-- SUBMISSION TEXT -->
				<g:HTMLPanel addStyleNames='{style.registration-box}'>
					<g:Label>We got your registration!</g:Label>
					<g:Label>A confirmation link has been sent to the email address you provided (it may take a few minutes). Simply click that link to activate your account, and you're ready to go.</g:Label>
					<g:Label>Thank you, and welcome to ohmage!</g:Label>
					<g:Label>- the ohmage team</g:Label>
				</g:HTMLPanel>
			</g:HTMLPanel>
			
			<!-- FOOTER BAR (FOOTER #2) -->
			<g:HTMLPanel addStyleNames='{style.ohmage-footer-bar}'>
				<g:HTMLPanel addStyleNames='{style.footer-box} {style.float-right}'>
					<ul>
						<li>Powered by <b>ohmage</b></li>
					</ul>
				</g:HTMLPanel>
				<g:HTMLPanel addStyleNames='{style.footer-box}'>
					<ul>
						<li>Copyright &#169; 2012 MobilizeLab</li>
						<li>&#183;</li>
						<li>All rights reserved</li>
					</ul>
				</g:HTMLPanel>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder>