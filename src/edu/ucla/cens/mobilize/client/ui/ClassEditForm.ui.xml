<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	  .actionLinks {
      font-size: 0.9em;
      padding: 20px;
    }
    .backLink {
      display: inline-block;
      float: left;
      padding-left: 20px;
    }
    .classDescription {
      height: 40px;
      width: 280px;
    }
    .container {
    }
    .detailPanel {
      width: 100%;
    }
    .detailTable {
      width: 100%;
    }
    .detailTable td {
      vertical-align: top;
    }
    .detailTable textarea {
      width: 285px;
    }
   .detailText, .actionLinks {
      padding-left: 20px;
    }
    td.label {
      font-weight: bold;
      height: 25px;
      padding-right: 10px;
      text-align: right;
      width: 170px;
    }
    /* lists of current supervisor(s) and members are lists of names with x button to delete */
    .supervisorList, .memberList {
      margin-bottom: 10px;
    }
    .supervisorList button, .memberList button {
      background-color: #DDD;
      border: solid 1px #AAA;
      color: #888;
      cursor: pointer;
      font-size: 0.8em;
      height: 13px;
      padding: 0px;
      width: 13px;
    }
    .supervisorList td, .memberList td {
      border-bottom: solid thin #CCC;
      color: #444;
      font-size: 0.9em;
      padding-right: 5px;
      vertical-align: middle;
    }
    /* header at the top of the section that displays title and instructions */
    .sectionHeader {
      background-color: #FFFFE0;
      border-bottom: solid 1px #CCC;
      margin-bottom: 10px;
      padding: 0px;
      margin: 0px 0px 10px;
      padding: 10px 70px;
    }
    .sectionHeaderInstructions {
      font-size: 0.8em;
    }
    .sectionHeaderTitle {
      font-size: 1.2em;
      font-weight: bold;
    }
    /* button styles */
    .cancelButton {
    }
    .saveButton {
    }
	</ui:style>
   <g:HTMLPanel addStyleNames='{style.container}'>
     <g:VerticalPanel addStyleNames='{style.detailPanel}'>
       <g:HTMLPanel addStyleNames='{style.sectionHeader}'>
          <!-- title is set dynamically to name of the class being edited -->
          <g:Label ui:field='header' addStyleNames='{style.sectionHeaderTitle}' />
          <div class='{style.sectionHeaderInstructions}'>
            Changes will not be stored until you click Save.
          </div>
       </g:HTMLPanel>

       <g:HTMLPanel addStyleNames='{style.detailPanel}'>
        <table class='{style.detailTable}'>
          <tr>
            <td class='{style.label}'>
              Class Name:
            </td>
            <td>
              <g:InlineLabel ui:field='className' />
            </td>
          </tr>
          <tr>
            <td class='{style.label}'>
              Class Urn:
            </td>
            <td>
              <g:InlineLabel ui:field='classUrn' />
            </td>
          </tr>
          <tr>
            <td class='{style.label}'>
              Description:
            </td>
            <td>
              <g:TextArea ui:field='descriptionTextArea' />
            </td>
          </tr>
          <tr>
            <td class='{style.label}'>
              Supervisors:
            </td>
            <td>
              <g:FlexTable ui:field='supervisorsFlexTable' addStyleNames='{style.supervisorList}' />
            </td>
          </tr>
          <tr>
            <td class='{style.label}'>
              Members:
            </td>
            <td>
              <g:FlexTable ui:field='membersFlexTable' addStyleNames='{style.memberList}' />
            </td>
          </tr>
          <tr>
            <td />
            <td>
              <g:Button ui:field='saveButton' addStyleNames='{style.saveButton}'>
                Save
              </g:Button>
              <g:Button ui:field='cancelButton' addStyleNames='{style.cancelButton}'>
                Cancel
              </g:Button>
            </td>
           </tr>
        </table>
      </g:HTMLPanel>  
            
     </g:VerticalPanel>
   </g:HTMLPanel>
</ui:UiBinder> 