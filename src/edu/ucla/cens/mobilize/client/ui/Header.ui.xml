<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
		.accountMenu {
			display: inline-block;
			float: right;
			font-size: 0.9em;
			padding: 10px 5px 0px;
		}
		.appName {
			display: inline-block;
			font-weight: bold;
			font-size: 3.0em;
			padding: 5px 15px 0px;
		}
		.header {
		  background-color: #EEEEEF;
	  }
		.logout button {
			margin: 5px 0px;
		}
		.menu {
		}
		.status {
		  /*background-color: #B8CEE0;*/
		  background-color: #D7E8AB;
		  border: solid 1px #A5CD3A;
		  padding: 3px 10px 3px 30px;
	  }
		.userName {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames='{style.header}'>
	 <g:InlineLabel ui:field='appNameLabel' addStyleNames='{style.appName}'>
	   MOBILIZE
	 </g:InlineLabel>
   <span class='{style.accountMenu}'>
     <div>
       <span class='{style.menu}'>
		     <g:InlineHyperlink targetHistoryToken='dashboard'>Home</g:InlineHyperlink>
		     |
		     <g:InlineHyperlink targetHistoryToken='account'>My Account</g:InlineHyperlink>
		     |
		     <!-- <g:InlineHyperlink targetHistoryToken='help'>Help</g:InlineHyperlink> -->
		     <a href='http://mobilizingcs.wikispaces.com/help'>Help</a>
	     </span>
	     <g:Button ui:field='logoutButton'>
         Logout
       </g:Button>
     </div>
   </span>
   
   <div class='floatstop' />
   
   <div class='{style.status}'>
    You are logged in as <g:InlineLabel ui:field='userNameLabel' addStyleNames='{style.userName}' />
   </div>
   
	</g:HTMLPanel>
</ui:UiBinder> 