<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.dom.client">
	
  <ui:with field="res" type="edu.ucla.cens.mobilize.client.resources.FrontendResources" />

  <ui:style type="edu.ucla.cens.mobilize.client.ui.CampaignDetail.CampaignDetailStyle">
    .actionLinks {
    	font-size: 0.9em;
    	padding: 20px;
    }
    .backLink {
    	display: inline-block;
    	float: left;
    	padding-left: 20px;
    }
    .container {
    }
    .detailPanel {
    	width: 100%;
    }
    .detailTable {
    	width: 100%;
    }
    .detailTable td {
    	vertical-align: top;
    }
   .detailText, .actionLinks {
   	  padding-left: 20px;
    }
    
    td.label {
    	font-weight: bold;
    	height: 25px;
    	padding-right: 10px;
    	text-align: right;
    	width: 170px;
    }
    .classList, .authorList {
    	margin-bottom: 10px;
    }
    
    @eval LOCK_OFFSET SpriteHelper.lock_small()+"px";
    .privacyPrivate {
    	/*background-image: url('images/lock_small.png');*/
    	background-position: 4px LOCK_OFFSET;
      background-color: #EEE;
      border: solid 1px #BBB;
    }
    
    @eval GROUP_OFFSET SpriteHelper.group_small()+"px";
    .privacyShared {
    	/*background-image: url('images/group_small.png');*/
    	background-position: 4px GROUP_OFFSET;
    	background-color: #FFF7D7;
    	border: solid thin #DDD6A4;
    	height: auto;
    }
    .sectionHeader {
      background: #EAEFF3 repeat-x url("images/bg_white_transparent_50.png");
    	border-bottom: thin solid #DDD;
    	padding: 15px 0px;
    	text-align: center;
    	width: 100%;
    }
    .sectionHeaderTitle {
    	font-size: 1.2em;
    	font-weight: bold;
    }
    .running, .stopped, .other, .privacyShared, .privacyPrivate {
    	font-weight: bold;
    	display: inline-block;
    	padding: 3px 20px 3px 20px;
    	text-align: center;
    	width: 55px;
    }
    @eval BULLET_RED_OFFSET SpriteHelper.bullet_red()+"px";
    .stopped {
    	/*background-image: url('images/bullet_red.png');*/
    	background-position: 4px BULLET_RED_OFFSET;
    	background-color: #EEE;
    	border: solid 1px #BBB;
    }
    @eval BULLET_GREEN_OFFSET SpriteHelper.bullet_green()+"px";
    .running {
    	/*background-image: url('images/bullet_green.png');*/
    	background-position: 4px BULLET_GREEN_OFFSET;
    	background-color: #E3F5CB;
    	border: solid 1px #99D999;
    }
    .xmlLink {
    	font-size: 0.9em;
    	padding: 0px 3px;
    }
    
    .actionViewXml, .actionDownloadXml, .actionExportCsv, .actionEdit {
    	color: #238;
    	cursor: pointer;
    	padding: 1px 20px;
    	text-decoration: underline;
    	background-repeat: no-repeat;
    }
    @eval EDIT_OFFSET SpriteHelper.page_white_edit_small()+"px";
    .actionEdit {
    	/*background-image: url('images/page_white_edit_small.png');*/
    	background-position: 2px EDIT_OFFSET; 
    }
    @eval MAGNIFY_OFFSET SpriteHelper.page_white_magnify_small()+"px";
    .actionViewXml {
      /*background-image: url('images/page_white_magnify_small.png');*/
      background-position: 2px MAGNIFY_OFFSET;
    }
    @eval COG_GO_OFFSET SpriteHelper.cog_go_small()+"px";
    .actionDownloadXml {
    	/*background-image: url('images/cog_go_small.png');*/
    	background-position: 2px COG_GO_OFFSET;
    }
    @eval PAGE_GO_OFFSET SpriteHelper.page_white_go_small()+"px";
    .actionExportCsv {
    	/*background-image: url('images/page_white_go_small.png');*/
    	background-position: 2px PAGE_GO_OFFSET; 
    }
    .actionBar {
    	background-color: #FFF;
    	border-bottom: solid thin #DDD;
    	font-size: 0.8em;
    	margin-bottom: 20px;
    	padding: 4px 20px;
    	width: 100%;
    }
    .actionLabel {
    	font-weight: bold;
    	padding-right: 8px;
    }
    
  </ui:style>
  
  <g:HTMLPanel ui:field='container' addStyleNames='{style.container}'>
     <div id="formPanelContainer" /> <!-- needed for hidden form panels -->
  
     <g:VerticalPanel addStyleNames='{style.detailPanel}'>

      <g:HorizontalPanel addStyleNames='{style.sectionHeader}'>
        <g:HTMLPanel addStyleNames='{style.backLink}'>
            <g:Anchor ui:field='backLinkTop' addStyleNames='link'>&laquo;&nbsp;Back</g:Anchor>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames='{style.sectionHeaderTitle}'>
          Campaign&nbsp;Details
        </g:HTMLPanel>
      </g:HorizontalPanel>

      <g:HTMLPanel addStyleNames='{style.actionBar}'>
        <g:InlineLabel addStyleNames='{style.actionLabel}'>Actions:</g:InlineLabel>
	     <g:Anchor addStyleNames='{res.sprite.small} {style.actionViewXml}'
	               ui:field='actionLinkViewXml'>
	       View&nbsp;Xml&nbsp;Config
	     </g:Anchor>
	     <g:Anchor addStyleNames='{res.sprite.small} {style.actionDownloadXml}'
	               ui:field='actionLinkDownloadXml'>
	       Download&nbsp;Xml&nbsp;Config
	     </g:Anchor>
	     <g:InlineHyperlink addStyleNames='{res.sprite.small} {style.actionEdit}' 
                          ui:field='actionLinkEditCampaign'>
            Edit&nbsp;Campaign
        </g:InlineHyperlink>
	     <g:Anchor addStyleNames='{res.sprite.small} {style.actionExportCsv}'
	               ui:field='actionLinkExportResponses'>
	       Export&nbsp;Responses&nbsp;(.csv) 
	     </g:Anchor>
       	     
      </g:HTMLPanel>      

      <g:HTMLPanel>
	      <table class='{style.detailTable}'>
	        <tr>
	          <td class='{style.label}'>
	            <label>Campaign Name:</label>
	          </td>
	          <td>
				     <g:InlineLabel ui:field='campaignName'/>
	          </td>
	        </tr>
	        <tr>
            <td class='{style.label}'>
              <label>Urn:</label>
            </td>
            <td>
             <g:InlineLabel ui:field='campaignUrn'/>
            </td>
          </tr>
          <tr>
            <td class='{style.label}'>
              <label>Creation Time:</label>
            </td>
            <td>
             <g:InlineLabel ui:field='creationDate'/>
            </td>
          </tr>
	        <tr>
	          <td class='{style.label}'>
	            <label>Description:</label>
	          </td>
	          <td>
	           <g:InlineLabel ui:field='desc' />
	          </td>
	        </tr>
	        <tr>
	          <td class='{style.label}'>
	            <label>Classes:</label>
	          </td>
	          <td>
	           <g:VerticalPanel ui:field='classes' addStyleNames='{style.classList}' />
	          </td>
	        </tr>
	        <tr>
            <td class='{style.label}'>
              <label>Authors:</label>
            </td>
            <td>
             <g:VerticalPanel ui:field='authors' addStyleNames='{style.authorList}' />
            </td>
          </tr>
	        <tr>
	          <td class='{style.label}'>
	            <label>Xml Config:</label>
	          </td>
	          <td>
		          <g:Anchor ui:field='viewXmlInlineLink' addStyleNames='small-action-link'>
		            View
		          </g:Anchor>
		          <g:Anchor ui:field='downloadXmlInlineLink' addStyleNames='small-action-link'>
                Download
              </g:Anchor>
              <div id="hiddenFormContainer" class="hidden" />
	          </td>
	        </tr>
	        <tr>
	          <td class='{style.label}'>
	            <label>Running State:</label>
	          </td>
	          <td>
	            <span ui:field='runningStateSpan' class='{res.sprite.small}'></span>
	          </td>
	        </tr>
	        <tr>
	          <td class='{style.label}'>
	            <label>Privacy Setting:</label>
	          </td>
	          <td>
	            <span ui:field='privacySpan' class='{res.sprite.small}'>
	             PRIVATE
	            </span>
	          </td>
	        </tr>
	        <tr>
	          <td>
							<g:HTMLPanel addStyleNames='{style.actionLinks}'>
							  <g:Anchor ui:field='backLinkBottom' addStyleNames='link'>
							    &laquo;&nbsp;Go&nbsp;to&nbsp;campaign&nbsp;list
							  </g:Anchor>
							</g:HTMLPanel>
	          </td>
	          <td />
	        </tr>
	      </table>
      </g:HTMLPanel>      
    </g:VerticalPanel>
  </g:HTMLPanel>
</ui:UiBinder> 