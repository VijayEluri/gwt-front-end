<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	  .buttonDiv {
	  	/*background: #003 url(images/bg_headergradient.gif) repeat-x;*/
	  	background-color: #AAA;
	  	border-top: solid 1px #666;
	  }
	  .buttonDiv button {
	  	float: right;
	  }
	  .caption {
	  	font-size: 2.0em;
	  	font-weight: bold;
	  }
	  .container {
	  	background-color: white;
	  }
		.instructions {
			font-size: 0.9em;
			margin-top: 10px;
			padding: 10px 40px;
	  }
	  .classListBox {
	  	margin: 10px 40px;
	  	width: 250px;
	  }
	</ui:style>
	<g:DialogBox ui:field='dialog' 
	             animationEnabled='true' 
	             modal='true'>
	 <g:caption addStyleNames='{style.caption}'>Add classes</g:caption>
	 <g:HTMLPanel addStyleNames='{style.container}'>
	   <div class="{style.instructions}">
	     Use Ctrl-click to select multiple classes.
	   </div>
	   <g:ListBox ui:field='classesToChooseFromListBox' 
	              multipleSelect='true' 
	              addStyleNames='{style.classListBox}' />
	   <div class="{style.buttonDiv}">
	     <g:Button ui:field='addButton'>Add Selected</g:Button>
	     <g:Button ui:field='cancelButton'>Cancel</g:Button>
	     <div class="floatstop" />
	   </div>
	 </g:HTMLPanel>
	</g:DialogBox>
</ui:UiBinder> 