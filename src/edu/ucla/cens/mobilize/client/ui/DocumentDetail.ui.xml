<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style type="edu.ucla.cens.mobilize.client.ui.DocumentDetail.DocumentDetailStyle">
    .actionLinks {
      font-size: 0.9em;
      padding: 20px;
    }
    .backLink {
    	cursor: pointer;
      display: inline-block;
      float: left;
      padding-left: 20px;
      text-decoration: underline;
    }
    .container {
    }
    .creationPropertiesPanel {
    	margin: auto;
    	width: 90%;
    }
    .detailPanel {
      width: 100%;
    }
    .detailTable {
      width: 100%;
    }
    .detailTable td {
      vertical-align: top;
    }
   .detailText, .actionLinks {
      padding-left: 20px;
    }
    .editButton, .downloadButton {
      background-repeat: no-repeat;
      background-position: 2px 50%;
      float:right;
      margin-right: 20px;
      padding: 2px 2px 2px 23px;
    }
    .downloadButton {
    	background-image: url('images/page_white_put.png');
    }
    .editButton {
      background-image: url('images/page_white_edit.png');
    }
    td.label {
      font-weight: bold;
      height: 25px;
      padding-right: 10px;
      text-align: right;
      width: 170px;
    }
    .classList, .campaignList {
      margin-bottom: 10px;
    }
    .privacyPrivate {
      background-image: url('images/lock.png');
      background-color: #EEE;
      border: solid 1px #BBB;
    }
    .privacyShared {
      background-image: url('images/group.png');
      background-color: #FFF7D7;
      border: solid thin #DDD6A4;
    }
    .sectionHeader {
      margin-bottom: 10px;
      padding: 20px 0px 6px;
      text-align: center;
    }
    .sectionHeaderTitle {
      font-size: 1.2em;
      font-weight: bold;
    }
    .privacyShared, .privacyPrivate {
      background-repeat: no-repeat;
      background-position: 2px 50%;
      font-weight: bold;
      display: inline-block;
      padding: 3px 20px 3px 20px;
      text-align: center;
      width: 55px;
    }
    
  </ui:style>
  
  <g:HTMLPanel ui:field='container' addStyleNames='{style.container}'>
     <g:VerticalPanel addStyleNames='{style.detailPanel}'>
     
       <g:HTMLPanel addStyleNames='{style.sectionHeader}'>
              <g:HTMLPanel addStyleNames='{style.backLink}'>
                <g:Anchor ui:field='backLinkTop' addStyleNames='link'>
                  &laquo;&nbsp;Back
                </g:Anchor>
              </g:HTMLPanel>
          <span class='{style.sectionHeaderTitle}'>Document&nbsp;Details</span>
          <g:InlineHyperlink addStyleNames='{style.editButton}' 
                       ui:field='editDocumentLink' 
                       targetHistoryToken='#'> 
            Edit&nbsp;Document
          </g:InlineHyperlink>
       </g:HTMLPanel>
     
      <g:HorizontalPanel addStyleNames='{style.creationPropertiesPanel}'>
        <g:InlineLabel ui:field='creatorLabel'/>
        <g:InlineLabel ui:field ='creationDateLabel'/>
        <g:InlineLabel ui:field='sizeLabel'/>
      </g:HorizontalPanel>
     
      <g:HTMLPanel>
        <table class='{style.detailTable}'>
          <tr>
            <td class='{style.label}'>
              <label>Document Name:</label>
            </td>
            <td>
             <g:InlineLabel ui:field='documentNameLabel'/>
            </td>
          </tr>
          <tr>
            <td class='{style.label}'>
              <label>Description:</label>
            </td>
            <td>
             <g:InlineLabel ui:field='descriptionLabel' />
            </td>
          </tr>
          <tr>
            <td class='{style.label}'>
              <label>Privacy Setting:</label>
            </td>
            <td>
              <g:InlineLabel ui:field='privacyLabel'  /> 
            </td>
          </tr>
          <tr>
            <td class='{style.label}'>
              <label>Campaigns:</label>
            </td>
            <td>
             <g:VerticalPanel ui:field='campaignsVerticalPanel' addStyleNames='{style.campaignList}' />
            </td>
          </tr>
          <tr>
            <td class='{style.label}'>
              <label>Classes:</label>
            </td>
            <td>
             <g:VerticalPanel ui:field='classesVerticalPanel' addStyleNames='{style.classList}' />
            </td>
          </tr>
          <tr>
            <td>
              <g:HTMLPanel addStyleNames='{style.actionLinks}'>
                <g:InlineHyperlink targetHistoryToken='documents'>
                  &laquo;&nbsp;Go&nbsp;to&nbsp;document&nbsp;list
                </g:InlineHyperlink>
              </g:HTMLPanel>
            </td>
            <td />
          </tr>
        </table>
      </g:HTMLPanel>      
    </g:VerticalPanel>
  </g:HTMLPanel>
</ui:UiBinder> 