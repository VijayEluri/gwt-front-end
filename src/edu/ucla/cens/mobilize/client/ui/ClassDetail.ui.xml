<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
   .backLink {
     display: inline-block;
     float: left;
     padding-left: 20px;
   }
   .container {
   }
   .detailPanel {
     width: 100%;
   }
   .detailTable {
     width: 100%;
   }
   .detailTable td {
     vertical-align: top;
   }
   .editButton {
     background-image: url('images/page_white_edit.png');
     background-repeat: no-repeat;
     background-position: 2px 50%;
     float:right;
     padding: 2px 2px 2px 23px;
   }
   td.label {
     font-weight: bold;
     height: 25px;
     padding-right: 10px;
     text-align: right;
     width: 170px;
   }
   .memberList {
     margin-bottom: 10px;
   }
	.sectionHeader {
	  margin-bottom: 10px;
	  padding: 20px;
	  text-align: center;
	  width: 100%;
	}
	.sectionHeaderTitle {
	  font-size: 1.2em;
	  font-weight: bold;
	}

	</ui:style>
  <g:HTMLPanel ui:field='container' addStyleNames='{style.container}'>
     <g:VerticalPanel addStyleNames='{style.detailPanel}'>
       <g:HorizontalPanel addStyleNames='{style.sectionHeader}'>
         <g:InlineHyperlink ui:field='backLink' targetHistoryToken='classes'>
           &laquo;&nbsp;Go&nbsp;to&nbsp;class&nbsp;list
         </g:InlineHyperlink>
         <g:InlineLabel addStyleNames='{style.sectionHeaderTitle}'>
           Class&nbsp;Details
         </g:InlineLabel>
         <g:InlineHyperlink ui:field='editLink' 
                            addStyleNames='{style.editButton}' 
                            targetHistoryToken='dynamicallySet'>
           Edit&nbsp;Class
         </g:InlineHyperlink>
       </g:HorizontalPanel>
     
			<g:HTMLPanel addStyleNames='{style.detailPanel}'>
			  <table class='{style.detailTable}'>
			    <tr>
			      <td class='{style.label}'>
			        Class Name:
			      </td>
			      <td>
			        <g:InlineLabel ui:field='className' />
			      </td>
			    </tr>
			    <tr>
			      <td class='{style.label}'>
			        Class Urn:
			      </td>
			      <td>
			        <g:InlineLabel ui:field='classUrn' />
			      </td>
			    </tr>
			    <tr>
	          <td class='{style.label}'>
	            Description:
	          </td>
	          <td>
	            <g:InlineLabel ui:field='description' />
	          </td>
	        </tr>
			    <tr>
			      <td class='{style.label}'>
			        Members:
			      </td>
			      <td>
			        <g:VerticalPanel ui:field='membersVerticalPanel' />
			      </td>
			    </tr>
		    </table>
      </g:HTMLPanel>      
    </g:VerticalPanel>
  </g:HTMLPanel>
</ui:UiBinder> 